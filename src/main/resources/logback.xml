<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="COLOR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan([%date]) %highlight([%level]) %msg%n</pattern>
            <!--             ^^^^^^^^^^ [%logger{10} %file:%line]-->
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="COLOR" />
    </root>
</configuration>